generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  CREATED
  PROCESSING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String?
  phone         String?   @unique
  phoneVerified Boolean   @default(false)
  otp           String?
  otpExpiresAt  DateTime?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  address       String?

  image         String?
  emailVerified DateTime?

  // ðŸ”½ add these two lines
  resetToken           String?
  resetTokenExpiresAt  DateTime?

  orders        Order[]
  accounts      Account[]
  sessions      Session[]
}


model Product {
  id          String      @id
  sku         String      @unique
  title       String
  description String?
  priceCents  Int
  imageUrl    String?
  active      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  category    String?
  orderItems  OrderItem[]
}

model Order {
  id            Int         @id @default(autoincrement())
  userId        Int
  totalCents    Int
  status        OrderStatus @default(CREATED)
  paymentId     String?
  paymentStatus String?
  createdAt     DateTime    @default(now())
  orderItems    OrderItem[]
  user          User        @relation(fields: [userId], references: [id])
}

model OrderItem {
  id         Int     @id @default(autoincrement())
  orderId    Int
  productId  String
  quantity   Int     @default(1)
  priceCents Int
  product    Product @relation(fields: [productId], references: [id])
  order      Order   @relation(fields: [orderId], references: [id])
}

enum DirectoryStatus {
  PENDING
  APPROVED
  REJECTED
}

model DirectoryMember {
  id             Int              @id @default(autoincrement())
  name           String
  email          String           @unique
  phone          String?
  address        String?
  organization   String?
  position       String?
  zone           String? 
  state          String?
  branch         String?
  gender         String?
  dateOfBirth    DateTime?
  dateOfMarriage DateTime?
  imageUrl       String?
  status         DirectoryStatus  @default(PENDING)
  createdAt      DateTime         @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

enum LatestUpdateCategory {
  JINSHARNAM
  VATSALYA
  ADVERTISEMENT
}

model LatestUpdate {
  id        String               @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  published Boolean              @default(true)
  category  LatestUpdateCategory
  createdAt DateTime             @default(now())
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  location    String?
  eventDate   DateTime
  imageUrl    String?
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
}

